package Day0111;

class Shop{
	private String sangpum;
	private int price;
	private String sangColor;
	
	public Shop(String s, int p, String c) {
		sangpum = s;
		price = p;
		sangColor =c;
	}
	
	//제목
	public static void showTitle() {
		System.out.println("상품명\t가격\t색상");
	    System.out.println("=======================");
	}
	
	//생성한 갯수만큼 출력
	public void showShop() {
		System.out.println(sangpum+"\t"+price+"원\t+sangColor");
	}
}

public class ArrObTest_11 {

	public static void main(String[] args) {
		//4개 생성해서 출력할 것
		Shop[] shop= {
				new Shop("노트북", 2000000, "white"),
				new Shop("키보드", 20000, "black"),
				new Shop("마우스", 60000, "gray")	
		};
		
		for(int i=0;i<shop.length;i++) {
			shop[i].showShop();
			System.out.println("-------------------");
		}
		
	}
}
